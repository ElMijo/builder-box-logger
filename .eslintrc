{
    "env": {
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": 0,
        "@typescript-eslint/no-empty-interface": [2, {"allowSingleExtends": true}],
        "@typescript-eslint/no-inferrable-types": 0,
        "@typescript-eslint/explicit-module-boundary-types": [2, { "allowArgumentsExplicitlyTypedAsAny": true }],
        "@typescript-eslint/no-unsafe-member-access": 0,
        "@typescript-eslint/ban-types":[2, {"types":{ "Function": false, "Object": false}}],
        "@typescript-eslint/no-empty-function": [2, {"allow": ["arrowFunctions"]}],
        "@typescript-eslint/restrict-template-expressions": 0,
        "@typescript-eslint/no-unsafe-call": 0
    }
}
